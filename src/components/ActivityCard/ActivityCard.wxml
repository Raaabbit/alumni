<view class="card">
  <view class="card-block">
    <view class="flex-align-center padding-t-lg padding-b-lg">
      <image class="activity-card-avatar" mode="aspectFill" src="{{data.alumniCircleAvatar || '../../images/avatar_default.jpeg'}}" />
      <view class="flex-item padding-l-md">
        <view class="padding-b-sm">
          <text class="flex-item h1 text-title">{{data.activityName}}</text>
        </view>
        <view class="flex-align-center h5 activity-info">
          <view class="iconfont icon-calendar text-muted" />
          <view class="text-title padding-l-xs padding-r-xs text-muted">2019-12-20</view>
          <view class="iconfont icon-card text-primary" />
          <text class="text-title padding-l-xs padding-r-xs text-primary">{{data.enrolledNumber}}人报名</text>
        </view>
      </view>
      <view class="iconfont icon-arrow-right text-muted" />
    </view>
  </view>
</view>
