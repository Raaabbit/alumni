<view class="card-block padding-t-sm padding-b-sm">
  <view class="field">
    <label class="field-label">自我描述：</label>
    <view class="field-content">{{data.descr}}</view>
  </view>
  <view class="field">
    <label class="field-label">定位：</label>
    <view class="field-content">{{data.city}}</view>
  </view>
  <view class="field">
    <label class="field-label">出生年月：</label>
    <view class="field-content">
      <text>{{data.birth || '暂无'}}</text>
    </view>
  </view>
  <view class="field">
    <label class="field-label">手机号码：</label>
    <view wx:if="{{isFriend}}" class="field-content">{{data.phone || '暂无'}}</view>
    <view wx:else class="field-content">交换名片后可见</view>
  </view>
  <view class="field">
    <label class="field-label">微信号：</label>
    <view wx:if="{{isFriend}}" class="field-content">{{data.wechat || '暂无'}}</view>
    <view wx:else class="field-content">交换名片后可见</view>
  </view>
  <view class="field">
    <label class="field-label">邮箱：</label>
    <view wx:if="{{isFriend}}" class="field-content">{{data.email || '暂无'}}</view>
    <view wx:else class="field-content">交换名片后可见</view>
  </view>
</view>
