<view class="padding-t-md">
  <view class="margin-l-xl margin-r-xl">
    <view class="h1 title">群名称</view>
    <view class="card input-card">
      <input class="name-input h2 padding-sm" placeholder="请输入群名称" placeholder-class="search-placeholder" />
      <text class="word-tip h3 text-muted">15个字</text>
    </view>
    <view class="h1 title">群简介</view>
    <view class="card input-card">
      <textarea class="intro-input h2 padding-sm" placeholder="请输入群简介" placeholder-class="search-placeholder" />
      <text class="word-tip h3 text-muted">5000个字</text>
    </view>
  </view>
  <view class="fix-bottom">
    <button class="confirm-btn" bindtap="">完成</button>
  </view>
</view>