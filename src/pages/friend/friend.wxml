<import src="./tmplList.wxml" />

<view class="padding-t-md">
  <view class="search-header">
    <icon type="search" size="19" color="#CACACA" />
    <input
      class="search-header-input h2"
      placeholder="名片夹内搜索"
      placeholder-class="search-placeholder"
      bindconfirm="handleSearch"
      focus="true"
      confirm-type="search"
    />
  </view>
  <view class="margin-l-xl margin-r-xl">
    <Nav
      className="margin-t-sm margin-b-md"
      data="{{NAV}}"
      current="{{currentTab.id}}"
      bindswitch="handleSwitch"
    />
    <template
      wx:if="{{currentTab.key === 'Friend'}}"
      is="tmplList"
      data="{{ list: friendList, placeholder: '暂无朋友，快去交换名片吧' }}"
    />
    <template
      wx:else
      is="tmplList"
      data="{{ list: favoriteList, placeholder: '暂无收藏，快去收藏名片吧' }}"
    />
  </view>
</view>
