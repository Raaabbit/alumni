<view class="container padding-t-md">
  <view class="card">
    <view class="card-header">消息通知</view>
    <view class="card-block">
      <view class="flex-align-center padding-t-lg padding-b-lg border-b">
        <view class="avatar" />
        <view class="flex-item padding-l-lg">
          <view class="h1 text-strong padding-b-sm">
            <text>杨峒陵</text>
          </view>
          <view>请求交往名片</view>
        </view>
        <view class="self-top">
          <text class="h6 text-muted">2018-09-23</text>
        </view>
        <icon class="icon-arrow-up margin-l-lg" />
      </view>
      <view class="padding-t-md padding-b-md text-center">
        <text class="h3 text-primary">查看更多消息 (6)</text>
      </view>
    </view>
  </view>
  <view class="card">
    <view class="card-header">我的朋友</view>
    <view class="card-block">
      <view
        wx:for="{{friendList}}"
        class="flex-align-center padding-t-lg padding-b-lg border-b"
      >
        <image class="avatar" src="{{item.head_url}}" />
        <view class="flex-item padding-l-lg">
          <view class="h1 text-strong padding-b-sm">
            <text>{{item.real_name}}</text>
          </view>
          <view>{{item.company}}－{{item.job}}</view>
        </view>
        <view class="self-top">
          <icon class="icon-location" />
          <text class="text-muted">{{item.location}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
