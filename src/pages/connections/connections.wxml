<view wx:if="{{list}}">
  <view class="header">
    <Search
      placeholder="海量校友资源，一键搜索找人"
      alignType="center"
      bindtap="handleClickSearch"
      disabled
    />
  </view>

  <view class="padding-l-lg padding-r-lg">
    <view class="flex padding-t-sm padding-b-lg">
      <button class="capsule {{filter === 0 ? 'active' : ''}}" data-filter="{{0}}" bindtap="handleClickFilter">同城</button>
      <button class="capsule {{filter === 1 ? 'active' : ''}}" data-filter="{{1}}" bindtap="handleClickFilter">同学校</button>
      <button class="capsule {{filter === 2 ? 'active' : ''}}" data-filter="{{2}}" bindtap="handleClickFilter">可能认识</button>
    </view>
    <BusinessCard
      wx:for="{{list}}"
      wx:key="accountId"
      data="{{item}}"
      data-id="{{item.accountId}}"
      bindtap="handleClickCard"
    />
  </view>
</view>
<Loading wx:else isFixed />
